<div class="container">

    <div class="row">

            <div class="col-md-12">
                <h1>Food Supplies for sale</h1>
                <div class="form-group">
                    <%= form_tag home_index_path, :method => 'get' do %>
                    <%= text_field_tag :search, params[:search], class: 'form-control', :placeholder=> 'Search By Product Title' %>
                    <br>
                    <%= submit_tag "Search", :class=> 'btn btn-primary' %>
                    <% end %>
                </div>
                <br>
            </div>
    </div>

  <!-- Navigation for products -->
<div class="products-navigation  push-down-15">
  <div class="row">
    <div class="col-xs-12  col-sm-8">
      <div class="products-navigation__title">
        <h3><span class="light">Buy</span> Food Today and Prevent Tomorrow's Waste </h3>
      </div>
    </div>
    <div class="col-xs-12  col-sm-4">
      <div class="products-navigation__arrows">
        <a href="#js--latest-products-carousel" data-slide="prev"><span class="glyphicon  glyphicon-chevron-left  glyphicon-circle  products-navigation__arrow"></span></a>&nbsp;
        <a href="#js--latest-products-carousel" data-slide="next"><span class="glyphicon  glyphicon-chevron-right  glyphicon-circle  products-navigation__arrow"></span></a>
      </div>
    </div>
  </div>
</div>


<!-- Products -->
<div id="js--latest-products-carousel" class="carousel slide" data-ride="carousel" data-interval="5000">
    <!-- Wrapper for slides -->
  <div class="carousel-inner">

    <div class="item active">
      <div class="row">


       <% @products.each do |product| %>

        <div class="col-xs-6 col-sm-3  js--isotope-target  js--cat-5" data-price="" data-rating="">
          <div class="products__single">
            <figure class="products__image">
              <a href="/products/<%= product.id %>">
                <%= image_tag product.image.url(:thumb), :class=> "product__image", :width=> "263", :height=>"334" %>
                <!-- <img alt="#" class="product__image" width="263" height="334" src="images/dummy/w263/15.jpg"> -->
              </a>
              <div class="product-overlay">
                <a class="product-overlay__more" href="single-product.html">
                  <span class="glyphicon glyphicon-search"></span>
                </a>
                <a class="product-overlay__cart" href="/products/<%= product.id %>">
                  +<span class="glyphicon glyphicon-shopping-cart"></span>
                </a>
                <div class="product-overlay__stock">
                  <span class="out-of-stock">&bull;</span> <span class="in-stock--text"> <%= product.unitsperpackage %>

                  </span>
                </div>
              </div>
            </figure>
            <div class="row">
              <div class="col-xs-9">
                <h5 class="products__title">
                  <a class="products__link  js--isotope-title" href="single-product.html"><%= product.title %></a>
                </h5>
              </div>
              <div class="col-xs-3">
                <div class="products__price">
                  <%= product.price - (product.price * product.discount)/100 %>
                </div>
              </div>
            </div>
            <div class="products__category">
              <%= product.productbrand %>

            </div>
             <div class="products__category">
              Production date: <%= product.productiondate %>
            </div>
              <div class="products__category">
              Expiration date: <%= product.date %>
            </div>
            <div class="products__category">
              Unit Per Package: <%= product.unitsperpackage %>
            </div>
            <div class="products__category">
              Units: <%= product.units %>
            </div>
                        <div class="products__category">
              Description: <%= product.productdiscription %>
            </div>
                                    <div class="products__category">
              Location: <%= product.location %>
            </div>
          </div>
        </div>

      <% end %>


      </div>
    </div>
  </div>
  </div>
  </div>
