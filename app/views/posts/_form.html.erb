<%= form_for @post, html: { multipart: true} do |f| %>
	<div class="form-group">
		<%= f.label :title, "Name" %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	<div class="field">
		<%= f.label :rating, "Please rate your expierence from 1 to 5, 1 for bad and 5 for best:" %> 
		<%= f.radio_button :rating, 1 %> 1
		<%= f.radio_button :rating, 2 %> 2
		<%= f.radio_button :rating, 3 %> 3
		<%= f.radio_button :rating, 4 %> 4
		<%= f.radio_button :rating, 5 %> 5
	</div>



		<div class="form-group">
		<%= f.label :text, "Comment" %>
		<%= f.text_area :text, class: 'form-control' %>
	</div>
	<%= f.submit "Save", class: 'btn btn-success' %>

<% end %>