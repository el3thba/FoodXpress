<div class="container">
  <div class="row">
    
    <div class="col-md-12">
     
     <h1>Comments</h1>

     <%= link_to "New post", new_post_path %>
     <br><br>
     
    	<table class="table" >
    		<thead>
    			<tr>

    				<th>Comments</th>
    				<th>Rating</th>
    				<th>Average rating: <%= @posts.average(:rating) %></th>

    			</tr>
    		</thead>
    		<tbody>
    			<% @posts.each do |post| %>
    				<tr>
    					<td><%= post.title %>: <br> <%= post.text %></td>
    					<td><%= post.rating %> </td>
    					<td></td>
    				</tr>
    			<% end %>
    		</tbody>
    	</table>
    </div>

  </div>  

</div>

<style>
  table, th, td, thead, tbody {
      border: 1px solid white;

  }
  tr:nth-child(even) {background: #CCC}
  tr:nth-child(odd) {background: #FFF}

</style>




