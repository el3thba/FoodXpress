<%= form_for @product, html: { multipart: true} do |f| %>
	<div class="form-group">
		<%= f.label :title, "Type" %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>
		<div class="form-group">
		<%= f.label :productbrand, "Brand" %>
		<%= f.text_field :productbrand, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :price, "Price" %>
		<%= f.number_field :price, value: 1, class: 'form-control', min: 1 %>
	</div>
	<div class="form-group">
		<%=	f.label :productiondate, "Production Date" %>
		<%= f.date_field :productiondate %>
	</div>
		<div class="form-group">
		<%=	f.label :date, "Expiration Date" %>
		<%= f.date_field :date %>
	</div>
		<div class="form-group">
		<%= f.label :unitsperpackage, "Unit per Package" %>
		<%= f.number_field :unitsperpackage, value: 1, class: 'form-control', min: 1 %>
	</div>
		<div class="form-group">
		<%= f.label :units, "Units" %>
		<%= f.text_field :units, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :discount, "Discount%" %>
		<%= f.number_field :discount, value: 1, class: 'form-control', min: 1 %>
	</div>
		<div class="form-group">
		<%= f.label :productdiscription, "Discription" %>
		<%= f.text_field :productdiscription, class: 'form-control' %>
	</div>
		<div class="form-group">
		<%= f.label :deliverytime, "Delivery Time" %>
		<%= f.text_field :deliverytime, class: 'form-control' %>
	</div>
		<div class="form-group">
		<%= f.label :location, "Location" %>
		<%= f.text_field :location, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :supplyinstock, "Stock" %>
		<%= f.number_field :supplyinstock, value: 1, class: 'form-control', min: 1 %>
	</div>
		<div class="form-group">
		<%= f.label :image %>
		<%= f.file_field :image %>
	</div>

	<%= f.submit "Save", class: 'btn btn-success' %>
<% end %>
