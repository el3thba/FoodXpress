<div class="container">
  <div class="row">
    
    <div class="col-md-4"></div>
    <div class="col-md-4">


      <h1 class="w3-margin w3-jumbo">Login</h1>

      
        <% flash.each do |key, value| %>
          <div style="color: red" class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
        
        
        <%= form_tag(:action => 'create') do %>
            
            <div class="form-group">
              <%= label_tag :email, 'Email' %>
              <%= text_field(:user, :email, class: 'form-control') %>
            </div>
            
            <div class="form-group">  
              <%= label_tag :password, 'Password' %>
              <%= password_field(:user, :password, class: 'form-control') %>
            </div>

            <%= submit_tag("Login", class: 'btn btn-primary') %>
          
        <% end %>
        <br>
        <a href="/users/new"> Donâ€™t have an account? Register here!</a>
        
        
      
    </div>

    <div class="col-md-4"></div>
  </div>    
</div>

